<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Duck.RenderSystems.OpenGL</AssemblyName>
        <RootNamespace>Duck.RenderSystems.OpenGL</RootNamespace>
        <LangVersion>11</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\CoreInterfaces\CoreInterfaces.csproj" Private="false" />
      <ProjectReference Include="..\..\Graphics\Graphics.csproj" Private="false" />
      <ProjectReference Include="..\..\Platforms\Standard\Standard.csproj" Private="false" />
      <ProjectReference Include="..\..\Renderer\Renderer.csproj" Private="false" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Arch" Version="1.2.5" />
      <PackageReference Include="Silk.NET.OpenGL" Version="2.16.0" />
    </ItemGroup>

</Project>
